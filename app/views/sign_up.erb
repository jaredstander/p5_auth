<div class="container">
  <h1>Sign Up</h1>

  <form id="sign-up" method="post" action="/users">
    <label class="label" for="name">Name</label>
    <input type="text" name="user[name]" placeholder="e.g., joe" >
    &nbsp;<div class="error"><% if @errors %><%=@errors[:name].first%><% end %></div>
    <br>

    <label class="label" for="email">Email</label>
    <input type="email" name="user[email]" placeholder="e.g., me@example.com" >
    &nbsp;<div class="error"><% if @errors %><%=@errors[:email].first%><% end %></div>
    <br>

    <label class="label" for="password">Password</label>
    <input type="password" name="user[password]" placeholder="6 or more characters">
    &nbsp;<div class="error"><% if @errors %><%=@errors[:password].first%><% end %></div>
    <br>

    <div class="submit"><input type="submit" value="Sign Up"></div>
  </form>

</div>
